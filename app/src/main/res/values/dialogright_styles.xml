<resources>

    <style name="AccountDialogRightAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_bottom</item>
    </style>

    <style name="AccountDialogRightRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="layout_heightPercent">17%</item>
        <item name="layout_widthPercent">100%</item>
        <item name="android:background">@color/dialog_right_bkg_row</item>
    </style>

    <style name="AccountDialogRightTextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountDialogRightSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceSubTitle</item>
    </style>

    <style name="AccountDialogRightHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceHeading</item>
        <item name="layout_heightPercent">20%</item>
        <item name="layout_widthPercent">100%</item>
    </style>

    <style name="AccountDialogRightRootContainer">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/dialog_right_margin_left_right_bottom</item>
        <item name="android:paddingRight">@dimen/dialog_right_margin_left_right_bottom</item>
        <item name="android:paddingTop">@dimen/dialog_right_margin_top</item>
    </style>

    <style name="AccountDialogRightNegPosButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/dialogright_selector_btn_negative</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceNegPosButton</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AccountDialogRightButtonBlue">
        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/dialogright_selector_btn_white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/AccountTextAppearanceNegPosButton</item>
        <item name="android:textColor">@color/dialog_right_color_blue</item>
    </style>

    <style name="AccountTextAppearanceTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AccountTextAppearanceSubTitle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AccountTextAppearanceNegPosButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountTextAppearanceHeading">
        <item name="android:textSize">30sp</item>
    </style>
</resources>
